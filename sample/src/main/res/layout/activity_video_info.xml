<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spaces_double"
    android:paddingRight="@dimen/spaces_double">

    <TextView
        android:id="@+id/txt_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spaces_triple"
        android:textAllCaps="true"
        tools:text="Company Name"/>

    <TextView
        android:id="@+id/txt_job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spaces_normal"
        android:textSize="@dimen/text_big"
        android:textStyle="bold"
        tools:text="Job Title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/spaces_double">

        <TextView
            android:id="@+id/txt_total_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spaces_double"
            android:textSize="@dimen/text_big"
            android:textStyle="bold"
            tools:text="4"/>

        <TextView
            android:id="@+id/txt_title_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Question"
            android:textAllCaps="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spaces_normal"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="@dimen/spaces_double">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated Time"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spaces_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_total_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spaces_normal"
                    android:layout_marginRight="@dimen/spaces_normal"
                    android:textSize="@dimen/text_big"
                    android:textStyle="bold"
                    tools:text="56"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min"
                    android:textAllCaps="true"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/spaces_12"
            android:layout_height="@dimen/spaces_double"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="@dimen/spaces_double">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Usage"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spaces_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_total_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spaces_normal"
                    android:layout_marginRight="@dimen/spaces_normal"
                    android:textSize="@dimen/text_big"
                    android:textStyle="bold"
                    tools:text="15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mb"
                    android:textAllCaps="true"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/spaces_triple"
        android:layout_marginTop="@dimen/spaces_triple"
        android:text="Start Recording"/>

</LinearLayout>